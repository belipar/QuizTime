<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#ECEFF5"
    app:cardElevation="0dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="87dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quiz_image_view"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:src="@drawable/image_film"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/quiz_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Кино"
            android:textColor="#003C56"
            android:textSize="28sp"
            android:fontFamily="@font/ibmplexserif_regular"
            android:gravity="center"
            android:layout_marginStart="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/quiz_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textColor="#003C56"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:gravity="center"
                android:layout_marginStart="7dp"/>

            <TextView
                android:id="@+id/quiz_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8/10"
                android:textColor="#003C56"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:gravity="center"
                android:layout_marginStart="7dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
