<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".QuizActivity"
    android:background="#ECEFF5">

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/arrow_left"
        android:padding="0dp"
        android:backgroundTint="#ECEFF5"
        android:gravity="start"
        android:layout_gravity="start"
        android:textSize="24sp"
        android:textColor="#003C56"
        android:fontFamily="@font/ibmplexserif_regular"
        android:text="@string/back"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="7/20"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:textColor="#003C56"
            android:fontFamily="@font/ibmplexserif_regular"
            android:id="@+id/question_indicator_textview"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5:46"
            android:textSize="24sp"
            android:fontFamily="@font/ibmplexserif_regular"
            android:textColor="#003C56"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/timer_indicator_textview"/>

    </RelativeLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        tools:progress="40"
        android:id="@+id/question_progress_indicator"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ECEFF5"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Как называется космическая станция в фильме 'Интерстеллар'?"
                android:textSize="24sp"
                android:textColor="#003C56"
                android:gravity="center"
                android:fontFamily="@font/ibmplexserif_regular"
                android:id="@+id/question_textview"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:minHeight="74dp"
                android:backgroundTint="#F8FDFF"
                tools:text="Ans A"
                android:textColor="#003C56"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:layout_marginBottom="14dp"
                android:id="@+id/btn0"/>
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:minHeight="74dp"
                android:backgroundTint="#F8FDFF"
                tools:text="Ans B"
                android:textColor="#003C56"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:layout_marginBottom="14dp"
                android:id="@+id/btn1" />
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:minHeight="74dp"
                android:backgroundTint="#F8FDFF"
                tools:text="Ans C"
                android:textColor="#003C56"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:layout_marginBottom="14dp"
                android:id="@+id/btn2" />
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:minHeight="74dp"
                android:backgroundTint="#F8FDFF"
                tools:text="Ans D"
                android:textColor="#003C56"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:layout_marginBottom="14dp"
                android:id="@+id/btn3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:backgroundTint="#003C56"
                tools:text="Дальше"
                android:text="@string/next"
                android:textColor="#F8FDFF"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/ibmplexserif_regular"
                android:id="@+id/next_btn" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>











